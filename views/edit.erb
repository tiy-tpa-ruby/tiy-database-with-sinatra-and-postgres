<% if @employee.errors.any? %>
  <div class="alert alert-warning alert-dismissible" role="alert">
    <strong>Oh Snap!</strong>
    <%= @employee.errors.full_messages.join(" and ") %>
  </div>
<% end %>
<form action="/update" method="get" class="form-horizontal">
  <input type="hidden" name="id" value="<%= @employee["id"]%>" class="form-control">
  <div class="form-group <%= @employee.errors[:name].any? ? "has-error" : "" %>">
    <label class="control-label" for="name">Name </label>
    <input type="text" name="name" value="<%= @employee["name"]%>" class="form-control">
  </div>
  <div class="form-group">
    <label class="control-label" for="phone">Phone Number</label>
    <input type="text" name="phone" value="<%= @employee["phone"]%>" class="form-control">
  </div>
  <div class="form-group">
    <label class="control-label" for="address">Address</label>
    <input type="text" name="address" value="<%= @employee["address"]%>" class="form-control">
  </div>
  <div class="form-group">
    <label class="control-label" for="position">Position</label>
    <input type="text" name="position" value="<%= @employee["position"]%>" class="form-control">
  </div>
  <div class="form-group">
    <label class="control-label" for="salary">Salary</label>
    <input type="text" name="salary" value="<%= @employee["salary"]%>" class="form-control">
  </div>
  <div class="form-group">
    <label class="control-label" for="github">Github Account Name</label>
    <input type="text" name="github" value="<%= @employee["github"]%>" class="form-control">
  </div>
  <div class="form-group">
    <label class="control-label" for="slack">Slack Account Name</label>
    <input type="text" name="slack" value="<%= @employee["slack"]%>" class="form-control">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
